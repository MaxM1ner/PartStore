@model IEnumerable<Product>
@{
    ViewData["Title"] = "Part Store";
}

<div class="container text-center">
    <div class="row row-cols-5">
    @foreach (var product in Model)
    {
        <div class="col card m-2" style="width: 18rem;">
            @if (product.Images != null && product.Images.Count > 0)
            {
                <img src="@Url.Content("~/productFiles/img/" + product.Images.First().Path)" class="card-img-top" alt="@product.Name">
            }
            <div class="card-body">
                <h5 class="card-title"><a href="#">@product.Name</a></h5>
                <p class="card-text">@product.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="card-text text-success">@product.Price</p>
                    </div>
                    <a href="#" class="btn btn-outline-primary btn-sm">Сторінка товару</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>
