@model CatalogViewModel
@{
    ViewData["Title"] = "Cart - Part Store";
}
<section>
    <div class="containerr">
        <h2 class="section-title">Кошик</h2>
        <!--!УВАГА при створені  <div class="product-item" data-product-id="1"> давати кожному своє айді
            і це ж айді передавати в   <button class="card-btn add" onclick="addToOrder(1)">-->
        <div class="card-page-content" id="cardPageContent">
            <div class="product-item" data-product-id="1">
                <img src="https://content2.rozetka.com.ua/goods/images/big_tile/379882722.jpg"
                     alt="Product 1" />
                <div>
                    <h3 class="card-name-product">Product 1</h3>
                    <p>Price: $<span>111</span></p>
                </div>
                <div class="crad-btn-div">
                    <button class="card-btn add" onclick="addToOrder(1)">
                        Add to payment
                    </button>
                    <button class="card-btn remove">Delete</button>
                </div>
            </div>
            <div class="product-item" data-product-id="2">
                <img src="https://content2.rozetka.com.ua/goods/images/big_tile/379882722.jpg"
                     alt="Product 1" />
                <div>
                    <h3 class="card-name-product">Product 1</h3>
                    <p>Price: $<span>66</span></p>
                </div>
                <div class="crad-btn-div">
                    <button class="card-btn add" onclick="addToOrder(2)">
                        Add to payment
                    </button>
                    <button class="card-btn remove">Delete</button>
                </div>
            </div>
            <div class="product-item" data-product-id="3">
                <img src="https://content2.rozetka.com.ua/goods/images/big_tile/379882722.jpg"
                     alt="Product 1" />
                <div>
                    <h3 class="card-name-product">Product 1</h3>
                    <p>Price: $<span>43</span></p>
                </div>
                <div class="crad-btn-div">
                    <button class="card-btn add" onclick="addToOrder(3)">
                        Add to payment
                    </button>
                    <button class="card-btn remove">Delete</button>
                </div>
            </div>
            <a class="continue-card" href="./catalog.html">Продовжити покупки</a>
        </div>
        <h3 class="card-order-title">Замовлення</h3>
        <div class="order-form" id="orderForm">
            <div class="card-orders-block" id="cardOrdersBlock">
                <!-- <div class="product-item">
                  <img
                    src="https://content2.rozetka.com.ua/goods/images/big_tile/379882722.jpg"
                    alt="Product 1"
                  />
                  <div>
                    <h3 class="card-name-product">Product 1</h3>
                    <p>Price: $20</p>
                  </div>
                  <button class="card-btn remove">Delete</button>
                </div> -->
            </div>
            <h3 class="card-order-title">
                Total price: <span id="total-price">0$</span>
            </h3>
            <form class="card-form" id="checkout-form">
                <label for="name">Ім'я:</label>
                <input type="text" id="name" name="name" required />

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required />

                <label for="address">Адреса:</label>
                <textarea id="address"
                          name="address"
                          rows="3"
                          cols="50"
                          maxlength="60"
                          required></textarea>

                <button class="card-btn add" type="submit">Замовити</button>
            </form>
        </div>
    </div>
    <script src="./card.js"></script>
</section>