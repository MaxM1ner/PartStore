@model CatalogViewModel
@{
    ViewData["Title"] = "Catalog - Part Store";
}
<section id="fon-anim">
    <div class="containerr">
        <h2 class="category-main-title">Catalog</h2>

        <div class="catalog">
            @foreach (var type in Model?.ProductTypes)
            {
                <div class="catalog-category">
                    <a class="category-title" asp-action="Catalog" asp-route-typeid="@type.Id">@type.Value</a>
                </div>
            }
        </div>

        <div class="recommendation">
            <h2 class="catalog-recommendation">recommendation</h2>
            @if (Model.Products?.Count() > 0)
            {
                <div class="products-cards">
                    @foreach (var product in @Model.Products)
                    {
                        <div class="card-container">
                            <div class="card-img">
                                <img class="hero-image"
                                     src="@Url.Content("~/productFiles/img/" + product.Images.First().Path)"
                                     alt="@product.Type?.Value" />
                            </div>
                            <div class="card-content">
                                <h3 class="product-name">@product.Name</h3>
                                <p class="product-description">
                                    @product.Description
                                </p>
                                <div class="card-tags">
                                    <span class="product-price">Price: @product.Price</span>
                                    <a class="btn-open-product" sp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">Open</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                @foreach (var type in @Model.ProductTypes)
                {
                    <a href="" class="products-cards-title">@type.Value</a>
                <div class="products-cards">
                            @foreach(var product in type.Products.Take(5))
                            {
                            <div class="card-container">
                            <div class="card-img">
                                <img class="hero-image"
                                     src="@Url.Content("~/productFiles/img/" + product.Images.First().Path)"
                                     alt="@product.Type?.Value" />
                            </div>
                            <div class="card-content">
                                <h3 class="product-name">@product.Name</h3>
                                <p class="product-description">
                                    @product.Description
                                </p>
                                <div class="card-tags">
                                    <span class="product-price">Price: @product.Price</span>
                                    <a class="btn-open-product" sp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">Open</a>
                                </div>
                            </div>
                            </div>
                            }

                    
                </div>
                }
            }
        </div>
    </div>
</section>