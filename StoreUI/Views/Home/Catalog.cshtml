@model CatalogViewModel
@{
    ViewData["Title"] = "Catalog - Part Store";
}
<section id="fon-anim">
    <div class="containerr">
        <h2 class="category-main-title">Catalog</h2>

        <div class="catalog">
            @foreach (var type in Model.ProductTypes)
            {

                <a class="category-title stretched-link d-block catalog-category" asp-action="Catalog" asp-route-typeid="@type.Id">@type.Value</a>

            }
        </div>

        <div class="recommendation">
            <h2 class="catalog-recommendation">recommendation</h2>
            @if (Model.Products?.Count() > 0)
            {
                <div class="products-cards">
                    @foreach (var product in @Model.Products)
                    {
                        @if (product.Images?.Count < 1) continue;
                        <a class="card-container" sp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">

                            <div class="card-img">
                                <img class="hero-image"
                                     src="@Url.Content("~/productFiles/img/" + product.Images?.First().Path)"
                                     alt="@product.Type?.Value" />
                            </div>
                            <div class="card-content">
                                <h3 class="product-name">@product.Name</h3>
                                <p class="product-description">
                                    @product.Description
                                </p>
                                <div class="card-tags ">
                                    <span class="product-price">Price: @product.Price</span>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                @foreach (var type in @Model.ProductTypes)
                {
                    <a href="" class="products-cards-title">@type.Value</a>
                    <div class="products-cards">
                        @foreach (var product in type.Products.Take(5))
                        {
                            @if (product.Images?.Count < 1) continue;
                            <a class="card-container" sp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">
                                    <div class="card-img">
                                        <img class="hero-image"
                                        src="@Url.Content("~/productFiles/img/" + product.Images?.First().Path)"
                                        alt="@product.Type?.Value" />
                                    </div>
                                    <div class="card-content">
                                        <h3 class="product-name">@product.Name</h3>
                                        <p class="product-description">
                                            @product.Description
                                        </p>
                                        <div class="card-tags">
                                            <span class="product-price">Price: @product.Price</span>
                                        </div>
                                    </div>
                                </a>
                        }


                    </div>
                }
            }
        </div>
    </div>
</section>