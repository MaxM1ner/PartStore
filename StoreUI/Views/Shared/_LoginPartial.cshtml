@using Microsoft.AspNetCore.Identity
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

<ul class="nav-users">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-users-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li>
            <button type="submit" class="icon">
                
                <svg width="25" height="25">
                    <use href="img/icons.svg#icon-cart "></use>
                </svg>
                
            </button>

    </li>
        <li class="nav-users-item">
        <form  class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="icon">
                    <svg width="25" height="25">
                        <use href="img/icons.svg#icon-enter "></use>
                    </svg>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link icon" asp-area="Identity" asp-page="/Account/Register">
                <svg width="25" height="25">
              <use href="img/icons.svg#icon-user-reg "></use>
            </svg>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link icon" asp-area="Identity" asp-page="/Account/Login">
                <svg width="25" height="25">
                    <use href="img/icons.svg#icon-enter "></use>
                </svg>
            </a>
    </li>
}
</ul>
