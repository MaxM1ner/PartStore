@model StoreUI.Areas.Admin.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row admin">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="Price" type="number" step=".01" class="form-input" />
                <label asp-for="Price" class="control-label"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Name" class="form-input" />
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Description" class="form-input" />
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Quantity" class="form-input" />
                <label asp-for="Quantity" class="control-label"></label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVisible" /> @Html.DisplayNameFor(model => model.IsVisible)
                </label>
            </div>
            <div class="form-group">
                <select asp-for="ProductTypeId" class="form-input" id="typeId" asp-items="ViewBag.ProductTypeId"></select>
                <label asp-for="ProductTypeId" class="control-label"></label>
            </div>
            <div class="form-group">
                <select name="featureIds" class="form-input" id="fetchedFeatures" asp-items="ViewBag.TypeFeatures" multiple></select>
                <label name="featureIds" class="control-label"></label>
                <span class="text-danger"></span>
            </div>
            <div>
                <input id="add-features" class="add-btn" type="button" value="Add">
            </div>
            <div class="form-group">
                <select class="form-input" id="selectedFeatures" asp-for="SelectedFeaturesIds" asp-items="ViewBag.SelectedFeatures" multiple></select>
                <label asp-for="SelectedFeaturesIds" class="control-label"></label>
            </div>
            <div>
                <input id="remove-features" class="add-btn red" type="button" value="Remove">
            </div>

            <div class="form-group">
                <input type="submit" value="Save" id="btnSubmit" class="add-btn "  />
            </div>
        </form>
        <div>
            <a class="add-btn back" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/fetchFeatures.js"></script>
    }
}
