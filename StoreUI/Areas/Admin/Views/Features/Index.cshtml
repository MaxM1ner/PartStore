@model IEnumerable<StoreUI.Areas.Admin.ViewModels.FeatureViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Features</h1>

<p>
    <a class="add-btn" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTypeValue)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.FeatureId"><div class="admin-editor-btn">Edit</div></a>
                    <a asp-action="Details" asp-route-id="@item.FeatureId"><div class="admin-editor-btn">Details</div></a>
                    <a asp-action="Delete" asp-route-id="@item.FeatureId"><div class="admin-editor-btn btn-danger">Delete</div></a>
            </td>
        </tr>
}
    </tbody>
</table>
