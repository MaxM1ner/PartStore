@model Entities.Models.Feature

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Feature</h4>
<hr />
<div class="row admin">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-input" />
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Value" class="form-input" />
                <label asp-for="Value" class="control-label"></label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductTypeId" class="control-label"></label>
                <select asp-for="ProductTypeId" class ="form-input" asp-items="ViewBag.ProductTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="add-btn create" />
            </div>
        </form>
        <div>
            <a class="add-btn back" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
