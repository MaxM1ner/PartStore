@model StoreUI.Areas.Admin.ViewModels.FeatureViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Feature</h4>
<hr />
<div class="row admin">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeatureId" />
            <div class="form-group">
                <input asp-for="Name" class="form-input" />
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Value" class="form-input" />
                <label asp-for="Value" class="control-label"></label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ProductTypeId" class="form-input" asp-items="ViewBag.ProductTypeId"></select>
                <label asp-for="ProductTypeId" class="control-label"></label>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="add-btn" />
            </div>
        </form>
        <div>
            <a class="add-btn back" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
