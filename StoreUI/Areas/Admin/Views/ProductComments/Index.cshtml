@model IEnumerable<StoreUI.Areas.Admin.ViewModels.CommentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Comments</h1>

<p>
    <a class="add-btn" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                <div class="admin-search-block">
                    <div class="input-icons-admin">
                        <span class="input-span-icon">
                            <svg width="25" height="25">
                                <use href=@Url.Content("~/img/icons.svg#icon-search")></use>
                            </svg>
                        </span>
                        <input class="input-field form-input"
                               type="text"
                               placeholder="Username">
                    </div>
                    <button type="button" class="add-btn back">Search</button>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CommentId"><div class="admin-editor-btn">Edit</div></a>
                    <a asp-action="Details" asp-route-id="@item.CommentId"><div class="admin-editor-btn">Details</div></a>
                    <a asp-action="Delete" asp-route-id="@item.CommentId"><div class="admin-editor-btn btn-danger">Delete</div></a>
            </td>
        </tr>
}
    </tbody>
</table>
