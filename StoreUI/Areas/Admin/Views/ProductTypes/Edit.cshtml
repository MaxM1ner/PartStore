@model StoreUI.Areas.Admin.ViewModels.ProductTypeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductType</h4>
<hr />
<div class="row admin">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TypeImagePath" />
            <div class="form-group">
                <input asp-for="Value" class="form-input" />
                <label asp-for="Value" class="control-label"></label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVisible" checked /> @Html.DisplayNameFor(model => model.IsVisible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="add-btn" />
            </div>
        </form>
        <div>
            <a class="add-btn back" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
